{
  "name": "Mahjong Game Dev Environment",
  "image": "mcr.microsoft.com/vscode/devcontainers/javascript-node:18",
  
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/sshd:1": {
      "version": "latest"
    }
  },
  
  "postCreateCommand": "npm install && npm install -g @anthropic-ai/claude-cli",
  "postStartCommand": "sudo service ssh restart || sudo /usr/sbin/sshd -D -p 2222 &",
  
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-playwright.playwright",
        "esbenp.prettier-vscode",
        "bradlc.vscode-tailwindcss"
      ]
    }
  },
  
  "forwardPorts": [3000, 8080, 2222],
  "portsAttributes": {
    "2222": {
      "label": "SSH",
      "onAutoForward": "notify"
    }
  },
  
  "remoteUser": "node"
}
